  <!-- Hero2 Widget ******************* -->

  <Hero2
    id="mobile-app"
    tagline="Giới thiệu"
    image={{
      src: 'https://images.unsplash.com/photo-1535303311164-664fc9ec6532?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Ứng dụng điện thoại',
    }}
  >
    <Fragment slot="title">
      Quy trình <span class="hidden sm:inline">đăng ký & </span>mua phiếu giao hàng<br>
      <span class="text-accent dark:text-white">nước mắm CANA</span>
    </Fragment>

    <Fragment slot="subtitle">
        Thực hiện dễ dàng chỉ với vài bước qua ứng dụng Globedr và hệ thống EXO.
